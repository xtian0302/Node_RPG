    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "Debug Express API Program",
            "program": "${workspaceFolder}/ExpressJS Api/WebAPIs/api.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Chrome :3001",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Chrome :3002",
            "url": "http://localhost:3002",
            "webRoot": "${workspaceFolder}"
        }
    ]
}